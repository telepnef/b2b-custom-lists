<custom-lists class="hidden px-4 sm:px-6 lg:px-8" id="custom-lists">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-base font-semibold leading-6 text-gray-900">Products for a user "user_name"</h1>
    </div>
  </div>

  <div class="flex items-center justify-between">
    <div>
      <label for="location" class="block text-sm font-medium leading-6 text-gray-900">Bulk permissions edit</label>
      <select
        id="location"
        name="location"
        class="mt-2 block w-full rounded-md border-0 py-1.5 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6"
      >
        <option selected>View only</option>
        <option>Add to cart</option>
      </select>
    </div>
    <button
      type="button"
      class="rounded-md bg-indigo-600 px-2.5 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
    >
      Apply
    </button>
  </div>
  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 pb-80 align-middle sm:px-6 lg:px-8">
        <div class="min-w-full divide-y divide-gray-300">
          <div>
            <div class="flex">
              <div scope="col" class="w-1/5 py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">
                ID
              </div>
              <div scope="col" class="w-3/5 py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">
                Title
              </div>
              <div scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-0">
                <span class="sr-only">Go </span>
              </div>
            </div>
          </div>
          <div data-body></div>
        </div>
      </div>
    </div>
  </div>
</custom-lists>

<script async="defer" src="{{ 'custom-lists.js' | asset_url }}"></script>
